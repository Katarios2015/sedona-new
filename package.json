{
  "name": "sedona",
  "version": "15.0.0",
  "private": true,
  "description": "Личный проект «Седона» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "^10.2.3",
    "browser-sync": "^2.26.14",
    "gulp": "^4.0.2",
    "gulp-less": "4.0.x",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.12"
  },
  "dependencies": {
    "postcss": "^8.2.4"
  }
}
